        Skills / Interests
    </div>
    <div style="padding:10px;">
        @if(acctProfile.AccountSkills.Count() > 0){
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-left">Skill/Interest</th>
                        <th class="text-center">Proficiency</th>
                        <th class="text-center">Years Used</th>
                        @if(bEdit){ <th class="text-center">Remove</th> }
                    </tr>
                </thead>
                <tbody>
                    @foreach(AccountSkill skill in acctProfile.AccountSkills){
