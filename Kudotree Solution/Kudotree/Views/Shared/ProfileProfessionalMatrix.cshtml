<a id="experience" name="experience"></a>
<div class="panel panel-default">
    <div class="panel-heading panel-head1" style="text-align:left;">
        @if(bEdit){ <a href="#modalExperience" class="pull-right" data-toggle="modal"><span class="glyphicon glyphicon-plus"></span></a> }
        <span id="msgFrmExperience" class="alert alert-info pull-right" style="display:none;margin-right:5px;padding:5px 10px 5px 10px;">@ViewBag.Msg <span class="glyphicon glyphicon-ok"></span></span>
        Work Experience
    </div>
    <div style="padding:10px;">
        @if(acctProfile.AccountExperiences.Count() > 0){
            <table class="table table-striped" style="font-size:12px;">
                <tbody>
                    @foreach(AccountExperience job in acctProfile.AccountExperiences.OrderByDescending(ae => ae.DateTo))
                    {
                        string city = !string.IsNullOrEmpty(job.Business.City) ? job.Business.City : string.Empty;
                        string state = job.Business.State != null ? job.Business.State.Abbrev : string.Empty;
                        string country = job.Business.Country != null ? job.Business.Country.Abbrev : string.Empty;
            
                        <tr>
                            <td class="text-left">
                                <table style="background-color:transparent;width:100%;">
                                    <tr>
                                        <td class="text-left" style="width:30%;">
                                            <div><b>@job.Business.Name</b></div>
                                            @if(job.Business.Address1 != null){ <div>@job.Business.Address1</div> }
                                            @if(job.Business.Address2 != null){ <div>@job.Business.Address2</div> }
                                            <div>@string.Format("{0} {1} {2}", city, state, country)</div>
                                        </td>
                                        <td class="text-left" style="width:30%;vertical-align:top;"><b>@job.JobTitle</b></td>
                                        <td class="text-left" style="width:20%;vertical-align:top;">
                                            <div><b>From</b></div>
                                            @string.Format("{0:MM/dd/yyyy}", job.DateFrom)
                                        </td>
                                        <td class="text-left" style="width:20%;vertical-align:top;">
                                            <div><b>To</b></div>
                                            @string.Format("{0:MM/dd/yyyy}", job.DateTo)
                                        </td>

                                        @if(bEdit){ 
                                            <td class="text-center" style="vertical-align:top;"><a href="profile?id=@acctProfile.Id&jid=@job.Id&edit=1&a=experience" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-remove"></span></a></td>
                                        }
                                    </tr>
                                    @if(!string.IsNullOrEmpty(job.Description)){
                                    <tr><td colspan="4"><hr /></td></tr>
                                    <tr>
                                        <td colspan="4" style="white-space:pre-wrap;">@job.Description</td>
                                    </tr>
                                    }
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else{
            <div style="width:50px;margin:auto;">
                <img src="~/images/icon_noresults.jpg" style="width:100%;" />
            </div>
        }
    </div>
</div>

