                        <td class="text-center">@skill.YearsUsed</td>
                        @if(bEdit){ <td class="text-center" style="vertical-align:top;"><a href="profile?id=@acctProfile.Id&skid=@skill.Id&edit=1&a=skills" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-remove"></span></a></td> }
