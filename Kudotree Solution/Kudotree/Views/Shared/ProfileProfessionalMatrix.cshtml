@using Kudotree
@model Account
@{ 
    Account acctCurrent = (Account)Session["User"];
    Account acctProfile = (Account)Model;

    bool bEdit = Request.QueryString["edit"] != null;
    
    string panel = Request.QueryString["panel"] != null ? Request.QueryString["panel"].ToString() : string.Empty;
    string msg = ViewBag.Msg != null ? ViewBag.Msg : string.Empty;
}

<a id="profobj" name="profobj"></a>
<div class="panel panel-default">
    <div class="panel-heading panel-head1" style="text-align:left;">
        @if(bEdit){ <a href="#modalProfObj" class="pull-right" data-toggle="modal"><span class="glyphicon glyphicon-pencil"></span></a> }
        <span id="msgFrmProfObj" class="alert alert-info pull-right" style="display:none;margin-right:5px;padding:5px 10px 5px 10px;">@ViewBag.Msg <span class="glyphicon glyphicon-ok"></span></span>
        Professional Objective
    </div>
    <div style="padding:10px;">
        @if(!string.IsNullOrEmpty(acctProfile.JobTitle) || !string.IsNullOrEmpty(acctProfile.Summary)){
            <div style="white-space:pre-wrap;"><b>@acctProfile.JobTitle</b></div>
            
            <p>&nbsp;</p>
            <div style="white-space:pre-wrap;">@acctProfile.Summary</div>
        }
        else{
            <div style="width:50px;margin:auto;">
                <img src="~/images/icon_noresults.jpg" style="width:100%;" />
            </div>
        }
    </div>
</div>

<a id="resume" name="resume"></a>
<div class="panel panel-default">
    <div class="panel-heading panel-head1" style="text-align:left;">
        @if(bEdit){ <a href="#modalResume" class="pull-right" data-toggle="modal"><span class="glyphicon glyphicon-pencil"></span></a> }
        <span id="msgFrmResume" class="alert alert-info pull-right" style="display:none;margin-right:5px;padding:5px 10px 5px 10px;">@ViewBag.Msg <span class="glyphicon glyphicon-ok"></span></span>
        Resume
    </div>
    <div style="padding:10px;">
        @if(!string.IsNullOrEmpty(acctProfile.ResumeFile)){
            <a target="_blank" href="~/resumes/@acctProfile.ResumeFile">Click here to view resume</a>
