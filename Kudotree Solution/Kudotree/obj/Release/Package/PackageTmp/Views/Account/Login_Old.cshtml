@{
    ViewBag.Title = "Login";
    Layout = "~/views/shared/_layoutlogin.cshtml";

    string err = (TempData["Error"] != null) ? TempData["Error"].ToString() : string.Empty;
    string msg = (TempData["Msg"] != null) ? TempData["Msg"].ToString() : string.Empty;
}

@if(!string.IsNullOrEmpty(err)){ 
    <div class="alert alert-danger alert-dismissable">
       <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
       <div>@err</div>
    </div>
}

<div id="divWarn" class="alert alert-info alert-dismissable" style="display:@( (!string.IsNullOrEmpty(msg)) ? "block" : "none" )">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <div>@msg</div>
</div>

<div id="loginMainBlock">
    <div class="container">
        <div class="pull-left" style="margin-top:150px;padding:20px;width:40%;height:120px;background-color:#efefef;font-size:14pt;">
            <div>Search Kudotree and connect with</div>
            <form action="/home/search" method="post">
            <div class="row">
                <div class="col-md-10">
                    <input id="Keywords" name="Keywords" type="text" class="form-control" placeholder="services, people, skills, companies and more ..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-md btn-green">Go!</button>
                </div>
            </div>
            </form>
        </div>

        <div class="pull-right" style="padding:30px 30px 0px 150px;background-image:url('../images/jobs1.jpg');width:50%;height:396px;margin-bottom:20px;">
            <h2 class="text-right" style="color:#fff;">Join today - It's free!</h2>
        
            <form id="frmSignUp" method="post" action="~/account/signup" enctype="multipart/form-data">
                <div class="input-group-addon" style="border:none;">
                    <input type="text" class="form-control" name="FirstName" placeholder="First Name" />
                </div>
                <div class="input-group-addon" style="border:none;">
                    <input type="text" class="form-control" name="LastName" placeholder="Last Name" />
                </div>
                <div>
                    <div class="input-group-addon" style="border:none;">
                        <input type="text" class="form-control" name="Email" placeholder="email address" />
                    </div>
                </div>
                <div>
                    <button type="submit" style="margin:5px;" class="btn-green btn btn-sm pull-right">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>

